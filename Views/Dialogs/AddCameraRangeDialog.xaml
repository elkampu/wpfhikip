<Window x:Class="wpfhikip.Views.Dialogs.AddCameraRangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfhikip.Views.Dialogs"
        xmlns:viewModel="clr-namespace:wpfhikip.ViewModels.Dialogs"
        mc:Ignorable="d"
        Title="AddCameraRangeDialog" Height="300" Width="400">
    <Window.DataContext>
        <viewModel:AddCameraRangeDialogViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Start IP Address:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0" />
        <TextBox Grid.Column="1"
                 Width="200"
                 Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10" />

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="{Binding PingResult}"
                   Foreground="Red"
                   Margin="0,0,0,10" />

        <TextBlock Grid.Row="2"
                   Text="Username:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Visibility="{Binding IsLoginVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Width="200"
                 Text="{Binding Username}"
                 Margin="0,0,0,10"
                 Visibility="{Binding IsLoginVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <TextBlock Grid.Row="3"
                   Text="Password:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Visibility="{Binding IsLoginVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Width="200"
                     Text="{Binding Password}"
                     Margin="0,0,0,10"
                     Visibility="{Binding IsLoginVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Login"
                Command="{Binding LoginCommand}"
                Margin="0,0,0,10"
                Visibility="{Binding IsLoginVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Window>

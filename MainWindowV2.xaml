<Window x:Class="wpfhikip.MainWindowV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfhikip"
        mc:Ignorable="d"
        Background="#FAFAFA"
        Title="MainWindowV2"
        Height="450"
        Width="800">
    <Window.Resources>
        <Style x:Key="ModernMenuButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource SEC_LightBlue}" />
            <Setter Property="Foreground"
                    Value="{StaticResource SEC_White}" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Padding"
                    Value="10" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="3" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource SEC_MidBlue}" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource SEC_NavyBlue}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Width="200"
                    Background="#FFFFFF"
                    Margin="10">
            <Button Content="Sites Management"
                    Style="{StaticResource ModernMenuButtonStyle}" />
            <Button Content="Network Scanner"
                    Style="{StaticResource ModernMenuButtonStyle}" />
            <Button Content="Batch Configuration"
                    Style="{StaticResource ModernMenuButtonStyle}" />
            <Button Content="Backup Assistant"
                    Style="{StaticResource ModernMenuButtonStyle}" />
            <Button Content="Maintenance Tools"
                    Style="{StaticResource ModernMenuButtonStyle}" />
            <Button Content="Data Import"
                    Style="{StaticResource ModernMenuButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
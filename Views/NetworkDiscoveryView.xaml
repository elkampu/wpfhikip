<Window x:Class="wpfhikip.Views.NetworkDiscoveryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:wpfhikip.Converters"
        mc:Ignorable="d"
        Title="Network Discovery Tool"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <!-- Modern Styles -->
        <Style x:Key="ModernCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SEC_White}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource SEC_LightGrey}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="16" />
            <Setter Property="Margin"
                    Value="8" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="2"
                                      Opacity="0.1" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle"
               TargetType="Button">
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="12,8" />
            <Setter Property="Margin"
                    Value="4" />
            <Setter Property="FontWeight"
                    Value="Medium" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4"
                                      ShadowDepth="1"
                                      Opacity="0.2" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Opacity"
                            Value="0.9" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98"
                                            ScaleY="0.98" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#2563eb" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style x:Key="SuccessButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#16a34a" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style x:Key="DangerButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#dc2626" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style x:Key="SecondaryButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#6b7280" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style x:Key="SectionTitleStyle"
               TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Foreground"
                    Value="{StaticResource SEC_DarkGrey}" />
            <Setter Property="Margin"
                    Value="0,0,0,12" />
        </Style>

        <Style x:Key="StatsCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource SEC_White}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource SEC_LightGrey}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="6" />
            <Setter Property="Padding"
                    Value="16" />
            <Setter Property="Margin"
                    Value="4" />
        </Style>

        <Style x:Key="ModernDataGridStyle"
               TargetType="DataGrid">
            <Setter Property="Background"
                    Value="{StaticResource SEC_White}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource SEC_LightGrey}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="GridLinesVisibility"
                    Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush"
                    Value="#f3f4f6" />
            <Setter Property="HeadersVisibility"
                    Value="Column" />
            <Setter Property="AutoGenerateColumns"
                    Value="False" />
            <Setter Property="CanUserAddRows"
                    Value="False" />
            <Setter Property="CanUserDeleteRows"
                    Value="False" />
            <Setter Property="IsReadOnly"
                    Value="True" />
            <Setter Property="AlternatingRowBackground"
                    Value="#f9fafb" />
            <Setter Property="RowHeight"
                    Value="32" />
        </Style>
    </Window.Resources>

    <Grid Background="#f8fafc">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource SEC_White}"
                BorderBrush="{StaticResource SEC_LightGrey}"
                BorderThickness="0,0,0,1">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Network Discovery Tool"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource SEC_DarkGrey}" />
                    <TextBlock Text="Discover devices on your network using multiple protocols"
                               FontSize="14"
                               Foreground="{StaticResource SEC_MidGrey}"
                               Margin="0,4,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <Button Content="📊 Export Results"
                            Command="{Binding ExportResultsCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    <Button Content="🗑️ Clear"
                            Command="{Binding ClearResultsCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    <Button Content="⏹️ Stop"
                            Command="{Binding StopScanCommand}"
                            Style="{StaticResource DangerButtonStyle}" />
                    <Button Content="▶️ Start Scan"
                            Command="{Binding StartScanCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Panel -->
        <Border Grid.Row="1"
                Style="{StaticResource ModernCardStyle}"
                Margin="24,16,24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- Devices Found -->
                <Border Grid.Column="0"
                        Style="{StaticResource StatsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="DEVICES FOUND"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                        <TextBlock Text="{Binding TotalDevicesFound}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#16a34a" />
                        <TextBlock Text="Unique devices discovered"
                                   FontSize="12"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                    </StackPanel>
                </Border>

                <!-- Methods Active -->
                <Border Grid.Column="1"
                        Style="{StaticResource StatsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="METHODS ACTIVE"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                        <TextBlock FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#2563eb">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="ActiveMethodsCount" />
                                    <Binding Path="SelectedMethodsCount" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="Discovery methods running"
                                   FontSize="12"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                    </StackPanel>
                </Border>

                <!-- Networks Scanned -->
                <Border Grid.Column="2"
                        Style="{StaticResource StatsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="NETWORKS"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                        <TextBlock Text="{Binding SelectedNetworksCount}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#7c3aed" />
                        <TextBlock Text="Network segments selected"
                                   FontSize="12"
                                   Foreground="{StaticResource SEC_MidGrey}" />
                    </StackPanel>
                </Border>

                <!-- Progress -->
                <Border Grid.Column="3"
                        Style="{StaticResource StatsCardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="SCAN PROGRESS"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SEC_MidGrey}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding OverallProgress, StringFormat={}{0:F1}%}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SEC_DarkGrey}" />
                        </Grid>
                        <ProgressBar Value="{Binding OverallProgress}"
                                     Maximum="100"
                                     Height="8"
                                     Margin="0,8,0,4"
                                     Background="#e5e7eb"
                                     Foreground="#3b82f6" />
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="12"
                                   Foreground="{StaticResource SEC_MidGrey}"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2"
              Margin="24,8,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Configuration -->
            <StackPanel Grid.Column="0">
                <!-- Discovery Methods -->
                <Border Style="{StaticResource ModernCardStyle}"
                        Margin="0">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Discovery Methods"
                                       Style="{StaticResource SectionTitleStyle}"
                                       Margin="0" />
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <Button Content="All"
                                        Command="{Binding SelectAllMethodsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="11"
                                        Margin="2,0" />
                                <Button Content="None"
                                        Command="{Binding SelectNoMethodsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="11"
                                        Margin="2,0" />
                            </StackPanel>
                        </Grid>

                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      MaxHeight="250">
                            <ItemsControl ItemsSource="{Binding DiscoveryMethods}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="4"
                                                Margin="0,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background"
                                                            Value="Transparent" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter Property="Background"
                                                                    Value="#f3f4f6" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding IsSelected}"
                                                          IsEnabled="{Binding IsEnabled}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0" />

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Medium"
                                                               Foreground="{StaticResource SEC_DarkGrey}" />
                                                    <TextBlock Text="{Binding CategoryName}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource SEC_MidGrey}" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="2"
                                                            Orientation="Horizontal">
                                                    <Border Background="#fef3c7"
                                                            Padding="4,2"
                                                            CornerRadius="3"
                                                            Margin="4,0"
                                                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock Text="Running"
                                                                   FontSize="10"
                                                                   Foreground="#92400e"
                                                                   FontWeight="Bold" />
                                                    </Border>
                                                    <Border Background="#fca5a5"
                                                            Padding="4,2"
                                                            CornerRadius="3"
                                                            Margin="4,0"
                                                            Visibility="{Binding IsEnabled, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                        <TextBlock Text="Unavailable"
                                                                   FontSize="10"
                                                                   Foreground="#7f1d1d"
                                                                   FontWeight="Bold" />
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Network Segments -->
                <Border Style="{StaticResource ModernCardStyle}"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Network Segments"
                                       Style="{StaticResource SectionTitleStyle}"
                                       Margin="0" />
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <Button Content="🔄"
                                        Command="{Binding RefreshNetworksCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="11"
                                        Margin="2,0"
                                        ToolTip="Refresh" />
                                <Button Content="All"
                                        Command="{Binding SelectAllNetworksCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="11"
                                        Margin="2,0" />
                                <Button Content="None"
                                        Command="{Binding SelectNoNetworksCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="8,4"
                                        FontSize="11"
                                        Margin="2,0" />
                            </StackPanel>
                        </Grid>

                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      MaxHeight="300">
                            <ItemsControl ItemsSource="{Binding NetworkSegments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="4"
                                                Margin="0,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background"
                                                            Value="Transparent" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter Property="Background"
                                                                    Value="#f3f4f6" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center"
                                                              Margin="0,0,8,0" />
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Network}"
                                                               FontWeight="Medium"
                                                               Foreground="{StaticResource SEC_DarkGrey}" />
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding EstimatedHostCount, StringFormat={}~{0} hosts}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource SEC_MidGrey}" />
                                                </Grid>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource SEC_MidGrey}"
                                                           Margin="24,2,0,0"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel - Results -->
            <Border Grid.Column="2"
                    Style="{StaticResource ModernCardStyle}"
                    Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Results Header -->
                    <Grid Grid.Row="0"
                          Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Discovery Results"
                                   Style="{StaticResource SectionTitleStyle}"
                                   Margin="0" />

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                            <ToggleButton x:Name="GroupByMethodToggle"
                                          Content="📋 By Method"
                                          IsChecked="True"
                                          Padding="8,4"
                                          Margin="2,0"
                                          Style="{StaticResource {x:Type ToggleButton}}" />
                            <ToggleButton x:Name="GroupByDeviceToggle"
                                          Content="🖥️ By Device"
                                          IsChecked="{Binding ElementName=GroupByMethodToggle, Path=IsChecked, Converter={x:Static converters:InverseBooleanConverter.Instance}}"
                                          Padding="8,4"
                                          Margin="2,0"
                                          Style="{StaticResource {x:Type ToggleButton}}" />
                        </StackPanel>
                    </Grid>

                    <!-- Results Content -->
                    <Grid Grid.Row="1">
                        <!-- By Method View -->
                        <ScrollViewer Visibility="{Binding ElementName=GroupByMethodToggle, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding ResultsByMethodFiltered}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SEC_White}"
                                                BorderBrush="#e5e7eb"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Margin="0,0,0,12"
                                                Padding="16">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0"
                                                                Orientation="Horizontal">
                                                        <TextBlock Text="{Binding MethodName}"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   Foreground="{StaticResource SEC_DarkGrey}" />
                                                        <Border Background="#dbeafe"
                                                                Padding="6,2"
                                                                CornerRadius="3"
                                                                Margin="8,0,0,0">
                                                            <TextBlock Text="{Binding DeviceCount, StringFormat={}{0} devices}"
                                                                       FontSize="11"
                                                                       Foreground="#1e40af"
                                                                       FontWeight="Bold" />
                                                        </Border>
                                                    </StackPanel>

                                                    <ToggleButton Grid.Column="1"
                                                                  IsChecked="{Binding IsExpanded}"
                                                                  Content="⋮"
                                                                  Padding="8,4" />
                                                </Grid>

                                                <DataGrid ItemsSource="{Binding Devices}"
                                                          Style="{StaticResource ModernDataGridStyle}"
                                                          Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                          MaxHeight="300">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="IP Address"
                                                                            Binding="{Binding IPAddress}"
                                                                            Width="130" />
                                                        <DataGridTextColumn Header="Device Name"
                                                                            Binding="{Binding DisplayName}"
                                                                            Width="180" />
                                                        <DataGridTextColumn Header="Type"
                                                                            Binding="{Binding DeviceType}"
                                                                            Width="100" />
                                                        <DataGridTextColumn Header="Manufacturer"
                                                                            Binding="{Binding Manufacturer}"
                                                                            Width="140" />
                                                        <DataGridTextColumn Header="Model"
                                                                            Binding="{Binding Model}"
                                                                            Width="140" />
                                                        <DataGridTextColumn Header="Description"
                                                                            Binding="{Binding Description}"
                                                                            Width="*" />
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- By Device View -->
                        <DataGrid ItemsSource="{Binding ResultsByDeviceFiltered}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  Visibility="{Binding ElementName=GroupByDeviceToggle, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="IP Address"
                                                    Binding="{Binding IPAddress}"
                                                    Width="130" />
                                <DataGridTextColumn Header="Device Name"
                                                    Binding="{Binding DisplayName}"
                                                    Width="180" />
                                <DataGridTextColumn Header="Type"
                                                    Binding="{Binding DeviceType}"
                                                    Width="100" />
                                <DataGridTextColumn Header="Manufacturer"
                                                    Binding="{Binding Device.Manufacturer}"
                                                    Width="140" />
                                <DataGridTextColumn Header="Model"
                                                    Binding="{Binding Device.Model}"
                                                    Width="140" />
                                <DataGridTextColumn Header="Methods"
                                                    Binding="{Binding MethodCount}"
                                                    Width="80" />
                                <DataGridTextColumn Header="Discovery Methods"
                                                    Binding="{Binding MethodsStringFiltered}"
                                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding HasResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="🔍"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Opacity="0.3" />
                            <TextBlock Text="No devices discovered yet"
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource SEC_MidGrey}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,4" />
                            <TextBlock Text="Select discovery methods and network segments, then click Start Scan"
                                       FontSize="14"
                                       Foreground="{StaticResource SEC_MidGrey}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource SEC_White}"
                BorderBrush="{StaticResource SEC_LightGrey}"
                BorderThickness="0,1,0,0">
            <Grid Margin="24,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource SEC_DarkGrey}"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Ellipse Width="12"
                             Height="12"
                             Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill"
                                        Value="#6b7280" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsScanning}"
                                                 Value="True">
                                        <Setter Property="Fill"
                                                Value="#16a34a" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding IsScanning, Converter={StaticResource BoolToStatusConverter}}"
                               Foreground="{StaticResource SEC_DarkGrey}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>